<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="dialogRoot" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="400.0" prefWidth="200.0"
            minHeight="300" minWidth="200">
    <VBox AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" prefHeight="200" prefWidth="200" spacing="5">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
        <Label text="Date"/>
        <DatePicker fx:id="datePicker" maxWidth="Infinity"/>
        <Label text="Name"/>
        <TextField fx:id="nameTextField"/>
        <ComboBox fx:id="lessonComboBox" maxWidth="Infinity" promptText="Select Class"/>
        <TextArea fx:id="commentTextArea" VBox.vgrow="ALWAYS" promptText="Comment"/>
        <HBox spacing="5">
            <Button fx:id="cancelButton" text="Cancel"/>
            <Button fx:id="reserveButton" text="Reserve" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        </HBox>
    </VBox>
</AnchorPane>